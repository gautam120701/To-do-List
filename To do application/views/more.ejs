      <textarea name="description" placeholder="Enter Description Here" class="form-control m-auto w-75 mb-3"><%= task.description%></textarea>
      <h1 class="m-auto w-75"><button class="btn btn-info">Add Task</button>
        <a href="/delete/<%= task.id %>" class="btn btn-danger">Delete TAsk</a>

      </h1>
 
    </form>
  
  </div>
