<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <!-- CSS only -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
</head>
<body>
  <div class="container mt-5 w-100 d-flex ">
    <form action="/save" method="post" class="w-50">
      <h2 class="text-center mb-3">Enter Task</h2>
      <input type="text" name="title" placeholder="Task Name" class="form-control m-auto mb-3 w-75">
      <textarea name="description" placeholder="Enter Description Here" class="form-control m-auto w-75 mb-3"></textarea>
      <h1 class="m-auto w-75"><button class="btn btn-info">Add Task</button></h1>
 
    </form>
  <div class="right w-50">
    <% tasks.forEach(function(task)
    { %>
       <div class="alert alert-secondary">
        <div>
          <h3><%= task.title%></h3>
          <small><%= task.createdAt.toLocaleDateString() %>
           -<%= task.createdAt.toLocaleTimeString() %></small>
          <p><%= task.description.substr(0,50)%>...</p>
          <a href="/more/<%= task.id%>" class="btn btn-sm btn-dark">Read More</a>
        </div>
        <div>
          <!-- <%= task.id%> <%= task.title%> -->

        </div>
        <!-- <span>❌</span> -->
    <% }) %>
       </div>
  </div>
  </div>
</body>
</html>